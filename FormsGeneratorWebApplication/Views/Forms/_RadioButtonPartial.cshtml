<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title pn-tl-font">
            <span class="caret"></span>
            @Html.HiddenFor(m => m.question, new { Name = "[" + index + "].question" })
            @Html.Label(Model.question, new { @class = "control-label label" })
        </h3>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <fieldset>
                <div class="form-group">
          
                </div>
                <div class="form-group">
                    @for (var i = 0; i < Model.options.Count; ++i)
                    {
                        <div class="radio  col-lg-offset-1">
                            <div class="col-lg-10">
                                <label class="col-lg-1 control-label label label-default">@Model.options[i] </label>
                                @Html.RadioButtonFor(m => m.options[i].question, new { Name = "FormItemIList[" + index + "].selectedOption", @class = "radio-btn-value" })
                                <div class="col-lg-4">
                                    @Html.DisplayFor(m => m.options[i].option, new { @class = "control-label label" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
                </fieldset>
            </div>
        </div>
    </div>

