@model  FormsGeneratorWebApplication.Models.FormItemModel

@{
    var index = Convert.ToInt16((int)ViewBag.TextBoxCount);
}

<div class="ui-accordion-header">
    <div class="form-item">
        <h3 class="ui-header-height">Check Boxes</h3>
    </div>
</div>


<div>
    <div class="form-horizontal">
        <fieldset>
            <div class="row">
                <div class="form-group">
                    <label for="inputFormName" class="col-lg-2 control-label label label-default">@Html.LabelFor(m => m.question)</label>
                    <div class="col-xs-10">
                        @Html.TextBoxFor(m => m.question, new { Name = "FormItemIList[" + index + "].question", @class = "form-control question-inputWidth" })
                    </div>
                </div>
                @*<div class="form-group">
                    <label for="inputFormName" class="col-lg-2 control-label label label-default">@Html.LabelFor(m => m.minCheckable)</label>
                    <div class="col-xs-10">
                        @Html.TextBoxFor(m => m., new { Name = "FormItemIList[" + index + "].question", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputFormName" class="col-lg-2 control-label label label-default">@Html.LabelFor(m => m.maxCheckable)</label>
                    <div class="col-xs-10">
                        @Html.TextBoxFor(m => m.maxCheckable, new { Name = "FormItemIList[" + index + "].question", @class = "form-control" })
                    </div>
                </div>*@
                @for (var i = 0; i < Model.selected.Count; ++i)
                {
                    @*<div class=" checkboxes form-group">
                        <label for="inputFormName" class="col-lg-2 control-label">@Html.LabelFor(m => m.checkboxes[i].answer)</label>
                        <div class="col-xs-10">
                            @Html.TextBoxFor(m => m.checkboxes[i].answer, new { @class = "form-control" })
                        </div>
                    </div>*@
                    <div class="checkboxes form-group">
                        <label class="col-lg-2 control-label label label-default"> Option @i</label>
                        <div class="col-lg-10">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox">
                                    @Html.TextBoxFor(m => m.selected[i].selected, new { Name = "FormItemIList[" + index + "].selected[" + @i + "]", @class = "form-control checkbox-btn-input-width" })
                                </label>
                            </div>
                        </div>
                    </div>
                } 
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="button" class="btn btn-danger btn-remove-form-item">Remove</button>
                    </div>
                </div>
            </div>
            @Html.HiddenFor(m => m.postion, new { Name = "FormItemIList[" + index + "].postion" })
            @Html.HiddenFor(m => m.type, new { Name = "FormItemIList[" + index + "].type" })
        </fieldset>
    </div>
</div>


