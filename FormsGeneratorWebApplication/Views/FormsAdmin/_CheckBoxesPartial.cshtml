@model  FormsGeneratorWebApplication.Models.CheckBoxesModel

@{
    var index = Convert.ToInt16((int)ViewBag.TextBoxCount);
}

<div class="ui-accordion-header">
    <div class="form-item">
        <h3>Check Boxes</h3>
    </div>
</div>


<div>
    <div class="form-horizontal">
        <fieldset>
            <div class="row">
                <div class="form-group">
                    <label for="inputFormName" class="col-lg-2 control-label label label-default">@Html.LabelFor(m => m.question)</label>
                    <div class="col-xs-10">
                        @Html.TextBoxFor(m => m.question, new { Name = "[" + index + "].question", @class = "form-control question-inputWidth" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputFormName" class="col-lg-2 control-label label label-default">@Html.LabelFor(m => m.minCheckable)</label>
                    <div class="col-xs-10">
                        @Html.TextBoxFor(m => m.minCheckable, new { Name = "[" + index + "].question", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputFormName" class="col-lg-2 control-label label label-default">@Html.LabelFor(m => m.maxCheckable)</label>
                    <div class="col-xs-10">
                        @Html.TextBoxFor(m => m.maxCheckable, new { Name = "[" + index + "].question", @class = "form-control" })
                    </div>
                </div>
                @for (var i = 0; i < Model.checkboxes.Count; ++i)
                {
                    @*<div class=" checkboxes form-group">
                        <label for="inputFormName" class="col-lg-2 control-label">@Html.LabelFor(m => m.checkboxes[i].answer)</label>
                        <div class="col-xs-10">
                            @Html.TextBoxFor(m => m.checkboxes[i].answer, new { @class = "form-control" })
                        </div>
                    </div>*@
                    <div class="checkboxes form-group">
                        <div class="checkbox">
                            <label class="col-lg-2 control-label label label-default"> <input type="checkbox"></label>
                            <div class="col-xs-10">
                                @Html.TextBoxFor(m => m.checkboxes[i].answer, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                } 
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="button" class="btn btn-danger btn-remove-form-item">Remove</button>
                    </div>
                </div>
            </div>
            @Html.HiddenFor(m => m.postion, new { Name = "[" + index + "].postion" })
        </fieldset>
    </div>
</div>


