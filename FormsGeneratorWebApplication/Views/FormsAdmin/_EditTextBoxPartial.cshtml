<div>
    <div class="form-horizontal">
        <fieldset>
            <div class="row">
                <div class="form-group">
                    <label for="inputFormName" class="col-lg-2 control-label label label-default">
                        @Html.LabelFor(m => m.question)
                    </label>
                    <div class="col-xs-10">
                        @Html.TextBoxFor(m => m.question, new { Name = "[" + index + "].question", @class = "form-control question-inputWidth" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputFormName" class="col-lg-2 control-label label label-default">@Html.LabelFor(m => m.value)</label>
                    <div class="col-xs-10">
                        @Html.TextBoxFor(m => m.value, new { Name = "[" + index + "].value", @class = "form-control Answer-inputWidthHeight" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="button" class="btn btn-danger btn-remove-form-item">Remove</button>
                    </div>
                </div>
            </div>
            @Html.HiddenFor(m => m.postion, new { Name = "[" + index + "].postion" })
        </fieldset>
    </div>
</div>