@model  FormsGeneratorWebApplication.Models.RadioButtonModel

@{
    var index = Convert.ToInt16((int)ViewBag.TextBoxCount);
}

<div class="ui-accordion-header">
    <div class="form-item">
        <h3>Radio Button</h3>
    </div>
</div>

<div>
    <div class="form-horizontal">
        <fieldset>
            <div class="row">
                
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="button" class="btn btn-danger btn-remove-form-item">Remove</button>
                    </div>
                </div>
                @Html.HiddenFor(m => m.postion, new { Name = "[" + index + "].postion" })
            </div>
         
        </fieldset>
    </div>
</div>