
@model  FormsGeneratorWebApplication.Models.TextAreaModel

@{
    var index = Convert.ToInt16((int)ViewBag.TextBoxCount);
}

<div class="ui-accordion-header">
    <div class="form-item">
        <h3>Text Box</h3>
    </div>
</div>
<div>
    <div class="form-group">
        <div class="form-item">
            @Html.LabelFor(m => m.question)
            @Html.TextBoxFor(m => m.question, new { Name = "[" + index + "].question" })
        </div>

        <div class="form-item">
            @Html.LabelFor(m => m.value)
            @Html.TextBoxFor(m => m.value, new { Name = "[" + index + "].value" })
        </div>
    </div>
    @Html.HiddenFor(m => m.postion, new { Name = "[" + index + "].postion" })
</div>


