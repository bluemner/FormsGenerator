@{
    ViewBag.Title = "Index";

}

@*<h2>Welcome To The Admin Page</h2>
    @Html.ActionLink("Make a new Form", "MakeForm", "FormsAdmin")*@
@model FormsGeneratorWebApplication.Models.AdminFormModel

<div>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-1">
                <h3>List of your Forms.</h3>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8 col-lg-offset-1">
                @if (Model.forms.Count > 0)
                {
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr class="danger">
                            <th>Name</th>
                            <th>Copy</th>
                            <th>Edit</th>                           
                            <th>Statistics</th>                           
                            <th>Date Range</th>
                            <th>Status</th>
                            <th>Total</th>
                        </tr>
                        </thead>
                        <tbody>
                        @for (var i = 0; i < Model.forms.Count; ++i)
                        {
                            <tr>
                                <td><a href="">@Model.forms[i].Name </a></td>                            
                                <td><input type="button" class="btn" id="Admin-Form-Copy-Button-@i" value="Copy" /></td>
                                <td><input type="button" class="btn" id="Admin-Form-Edit-Button-@i" value="Edit"/></td>
                                <td><input type="button" class="btn" id="Admin-Form-Statistics-Button-@i" value="Statistics" /></td>
                                <td>
                                    @Html.TextBoxFor(m => m.forms[i].StartDate, null, new { @class = "date form-control" })
                                    @Html.TextBoxFor(m => m.forms[i].EndDate, null, new { @class = "date form-control" })
                                </td>
                                <td>@Html.CheckBoxFor(m => m.forms[i].Status)</td>
                                <td><label>@Model.forms[i].</label></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <div>You have no forms created yet.</div>
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-1">
                @Html.ActionLink("Create A New Form", "MakeForm", "FormsAdmin", new { @class = "btn btn-info btn-lg" })
                <div class="btn-group">
                    <a href="#" class="btn btn-success btn-lg">Create Form Template</a>
                    <a href="#" class="btn btn-success btn-lg dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                    <ul class="dropdown-menu btn-block">
                        <li>@Html.ActionLink("True or False Template", "Template?type=0&numberOfSubElements=1", "FormsAdmin")</li>
                        <li>@Html.ActionLink("TextBox Template", "MakeForm", "FormsAdmin")</li>
                        <li>@Html.ActionLink("TextArea Template", "MakeForm", "FormsAdmin")</li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>